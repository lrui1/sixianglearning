<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <RelativeLayout
            android:id="@+id/pathselect_title"
            android:layout_width="fill_parent"
            android:layout_height="46dip"
            android:background="@color/myback1"
            android:gravity="center_vertical"
            android:padding="0.0px" >

        <TextView
                android:id="@+id/main_title_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="96.0dip"
                android:paddingRight="96.0dip"
                android:singleLine="true"
                android:textSize="25dp"
                android:text="反馈" />
    </RelativeLayout>

    <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1"
            android:background="@color/white"
            android:fillViewport="true" >

        <EditText
                android:id="@+id/fee_back_edit"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:background="@null"
                android:gravity="left|top"
                android:hint="说些什么吧..."
                android:inputType="textMultiLine"
                android:paddingBottom="4.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="4.0dip"
                android:textSize="16.0sp" />
    </ScrollView>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/white" />

    <android.widget.Button
            android:id="@+id/feed_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/my_btn"
            android:paddingStart="100dp"
            android:paddingEnd="100dp"
            android:text="提  交" />

</LinearLayout>